* {
  box-sizing: border-box;
}
body {
  width: 100%;
  .layout {
    width: 100%;
    background-color: #f2f2f2;
    padding: 5px;
    > header {
      width: 100%;
      height: 50px;
      background-color: #ff841d;
      >a {
        position: fixed;
        right: 20px;
        bottom: 40px;
        z-index: 999;
        >img {
          width: 60px;
        }
      }
      >h1 {
        width: 70%;
        height: 100%;
        padding: 12px;
        box-sizing: border-box;
        display: block;
        >a{
          display: block;
          height: 100%;
          width: 100%;
          margin-top: -4px;
          > img{
            height: 100%;
          }
        }
      }
      >.download {
        height: 48px;
        width: 48px;
        padding: 7px;
        >a{
          display: block;
          width: 100%;
          height: 100%;
          > img{
            width: 100%;
          }
        }
      }
    }
    >.search {
      height: 50px;
      padding: 10px;
      box-sizing: border-box;
      position: relative;
      background-color: #fff;
      margin: 1px 0;
      >input:first-of-type{
        width: 100%;
        height: 30px;
        box-sizing: border-box;
        padding-left: 30px;
        border-radius: 15px;
        background-color: #f1f1f1;
      }
      >input:last-of-type {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 63px;
        height: 30px;
        background-color: #ff841d;
        color: #FFFFFF;
        border-radius: 15px;
      }
    }
    .pro-list {
      width: 100%;
      border-radius: 5px;
      border: 1px solid #cccccc;
      background-color: #ebebeb;
      .pro-brief {
        width: 100%;
        height: 40px;
        line-height: 40px;
        font-size: 16px;
        font-weight: bold;
        padding-left: 16px;
        border-bottom: 1px solid #ccc;
        background: url('../../images/arrow1.gif') right center no-repeat;
      }
      .pro-particular {
        display: none;
        width: 100%;
        li {
          float: left;
          width: 33.33%;
          height: 40px;
          line-height: 40px;
          border-right: 1px solid #ccc;
          border-bottom: 1px solid #ccc;
          text-align: center;
          background-color: #f2f2f2;
        }
      }
    }
    footer{
      margin-top: 10px;

      >.function{
        height: 34px;
        margin-top: 10px;
        >a {
          line-height: 34px;
          text-align: center;
          float: left;
          box-sizing: border-box;
          border: 1px solid #c4c4c4;
          border-left: 0 none;
          font-size: 12px;
        }
        >a:nth-of-type(1){
          width: 30%;
        }
        >a:nth-of-type(2){
          width: 30%;
        }
        >a:nth-of-type(3){
          width: 40%;
          border-right: none;

        }
      }
      >.interview {
        margin-top: 20px;
        >p{
          text-align: center;
          font-size: 12px;
          color: #666;
          >span{
            color: red;
          }

        }

      }
    }
  }
}