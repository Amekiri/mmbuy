@base: #ff841d;
@border: #e6e6e6;

body {
  //头部样式
  .header1 {
    height: 50px;
    background-color: @base;
    border-bottom: 1px solid #e6e6e6;

    .logo {
      padding: 12px;
      width: 75%;
      margin-left: 5px;

      img {
        max-height: 25px;
      }
    }

    .appdown {
      padding: 7px;

      img {
        max-height: 34px;
      }
    }
  }


  //搜索框
  .search {
    width: 100%;
    background-color:#fff;
    >.tab{
      height: 50px;
      padding: 10px;
      box-sizing: border-box;
      position: relative;
      margin: 1px 0;
      >input:first-of-type{
        width: 100%;
        height: 30px;
        box-sizing: border-box;
        padding-left: 30px;
        border-radius: 15px;
        background-color: #f1f1f1;
      }
      >input:last-of-type {
        position: absolute;
        top: 10px;
        right: 10px;
        width: 63px;
        height: 30px;
        background-color: #ff841d;
        color: #FFFFFF;
        border-radius: 15px;
      }
    }
  }

  //品牌详情
  .intro {

    h1 {
      font-size: 18px;
      margin: 10px;
      padding-left: 10px;
    }

    p {
      color: #666;
      font-size: 12px;
      margin: 10px;
      background: #fff;
      line-height: 20px;
      padding: 10px;
    }

    div {
      background: #f7f7f7;
      margin: 10px;
      font-size: 12px;
      padding: 10px;
      text-align: left;
      color: #999;
    }
  }

  //商品部分样式
  .product-list{
    .item{
      padding:10px 8px;
      font-size: 12px;
      background-color: #fff;
      position: relative;

      .goto{
        display: block;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        z-index:99;
      }
    }
  }
}

//商品列表
.product-list {
  width: 100%;
  > .container {
    padding-left: 0;
    padding-right: 0;
    > .low
    ul > li {
      width: 100%;
      height: 130px;
      border-bottom: 1px solid #e7e7e7;
      >.product-List-l{
        padding-top: 9px;
      }
      .product-List-r {
        p:first-of-type {
          font-size: 16px;
          color: #333;
          padding-top: 8px;
        }
        p:last-of-type {
          font-size: 18px;
          color: #ea3900;
          position: relative;
          }
        .comInfo{
          color: #999;
          font-size: 12px;
          padding-bottom: 20px;
          >span:first-child{
            padding-right: 20px;
            line-height: 24px;
          }
        }
      }
    }
    }
    li:last-of-type{
      border-bottom: none;
    }
    .proTitle {
      height: 40px;
      background-color: #efefef;
      line-height: 40px;
      border-bottom: 1px solid #ccc;
      border-top: 1px solid #ccc;
      text-align: center;
      p {
        font-size: 14px;
        color: #000;
        border-right: 1px solid #ccc;
      }
      p:last-of-type {
        border-right: none;
      }
    }
}

