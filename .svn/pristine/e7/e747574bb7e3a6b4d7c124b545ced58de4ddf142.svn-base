@mycolor: #ff696d;
html,body {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
* {
  box-sizing: border-box;
}
.layout {
  max-width: 640px;
  min-width: 320px;
  height: 100%;
  //布局顶部内边距，依据头部导航
  padding-top: 44px;
  position: relative;
  //loading加载

  //当下拉的时候刷新ajax请求

  .products-anchor {
    position: fixed;
    bottom: 0;
    right: 0;
    z-index: 99;
    width: 60px;
    img{
      width: 100%;
    }
  }
  //头部
  .discount-header {
    height: 44px;
    position: fixed;
    z-index: 99;
    width: 100%;
    max-width: 640px;
    top: 0;
    left: 0;
    .products-top-title {
      font-family: 'Microsoft yahei';
      text-align: center;
      width: 100%;
      background-color: @mycolor;
      font-size: 20px;
      font-weight: 500;
      .products-top-title-a {
        line-height: 44px;
        color:white;
        display: block;
      }
    }
    .go-back {
      position: absolute;
      top: 0;
      left: 0;
      height: 44px;
      width: 44px;
      padding: 5px;
      .trigger-wrap {
        position: absolute;
        left: 6px;
        top: 12px;
        width: 30px;
        height: 30px;
        .trigger-1 {
          border: 10px solid transparent;
          border-right-color: white;
          position: absolute;
          right: 10px;
          top: 0;
        }
        .trigger-2 {
          border: 10px solid transparent;
          border-right-color: @mycolor;
          position: absolute;
          top: 0;
          right: 8px;
          z-index: 1;
        }
      }
    }
    .app-download {
      position: absolute;
      right: 0;
      top: 0;
      width: 44px;
      height: 44px;
      background: url('../../images/header_app.png') no-repeat 10px 8px;
      padding: 5px;
      background-size: 60% 60%;
    }
  }
  //商品链接部分
  .histoty-content {
    padding: 15px;
    line-height: 30px;
    //font-family: 'Microsoft yahei';
    .product-link {
      font-size: 14px;
      display: block;
    }
    .product-on {
      font-size: 16px;
      color:silver;
      border-bottom: 1px solid silver;
      display: block;
    }
    .product-select-btn {
      height: 80px;
      padding-top: 30px;
      text-align: center;
      .btn-check {
        padding: 10px 15px;
        border: 1px solid silver;
        border-radius:20px;
      }
      .btn-reset {
        padding: 10px 15px;
        border: 1px solid silver;
        border-radius:20px;
        transition:transform 1.5s ease;
      }

    }
    .product-steps {
      margin-top: 20px;
      .product-steps-two{
        display: block;
        font-size: 14px;
      }
      .product-steps1 {
        font-size: 12px;
        display: block;
        color:silver
      }
      .product-steps2 {
        font-size: 12px;
        display: block;
        color:silver
      }
    }
  }
  //页面底部
  footer{
    margin-top: 10px;
    position: absolute;
    bottom: 0;
    //left: 0;
    width: 100%;
    >.function{
      height: 34px;
      margin-top: 10px;
      width: 100%;
      >a {
        line-height: 34px;
        text-align: center;
        float: left;
        box-sizing: border-box;
        border: 1px solid #c4c4c4;
        border-left: 0 none;
        font-size: 12px;
      }
      >a:nth-of-type(1){
        width: 30%;
      }
      >a:nth-of-type(2){
        width: 30%;
      }
      >a:nth-of-type(3){
        width: 40%;
        border-right: none;

      }
    }
    >.interview {
      margin-top: 20px;
      >p{
        text-align: center;
        font-size: 12px;
        color: #666;
        >span{
          color: red;
        }

      }

    }
  }
  .bg-cover {
    position: fixed;
    z-index: 200;
    display: none;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.6);
    .bg-child {
      background-color: @mycolor;
      width: 60%;
      position: absolute;
      top: 50%;
      left: 50%;
      transform:translate(-50%,-50%);
      padding: 15px;
      color:white;
      border-radius: 15px;
      li {
        line-height: 30px;
        height: 30px;
        border-bottom: 1px dashed white;
        span:first-of-type{
          float: left;
          margin-left: 5px;
        }
        span:last-of-type{
          float: right;
          margin-right: 5px;
        }
      }
      li:last-of-type{
        width: 60px;
        margin: 10px auto 0;
        text-align: center;
        border-bottom: none;
        .bg-btn-reset {
          padding: 6px;
          border-radius: 4px;
          border: 1px solid white;
          color:white;
          outline: none;
        }
      }
    }
    //给ul设置一个动画
    @keyframes ulShowHide {
      0% {transform:translate(-50%,-50%) scale(0)}
      100% {transform:translate(-50%,-50%) scale(1)}
    }
    .ulShowHide {
      animation:ulShowHide 0.6s ease both;
    }
  }

}