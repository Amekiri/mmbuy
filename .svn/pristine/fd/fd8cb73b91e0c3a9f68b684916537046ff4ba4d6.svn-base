* {
  box-sizing: border-box;
}
.layout{
  width: 100%;
  //头部
  >header{
    width: 100%;
    height: 50px;
    background-color: #ff841d;
    >a {
      position: fixed;
      right: 20px;
      bottom: 40px;
      z-index: 999;
      >img {
        width: 60px;
      }
    }
    >h1 {
      width: 70%;
      height: 100%;
      padding: 12px;
      box-sizing: border-box;
      display: block;
      >a{
        display: block;
        height: 100%;
        width: 100%;
        margin-top: -4px;
        > img{
          height: 100%;
        }
      }
    }
    >.download {
      height: 48px;
      width: 48px;
      padding: 7px;
      >a{
        display: block;
        width: 100%;
        height: 100%;
        > img{
          width: 100%;
        }
      }
    }
  }
  //搜索框
  >.search {
    height: 50px;
    padding: 10px;
    box-sizing: border-box;
    position: relative;
    background-color: #fff;
    margin: 1px 0;
    >input:first-of-type{
      width: 100%;
      height: 30px;
      box-sizing: border-box;
      padding-left: 30px;
      border-radius: 15px;
      background-color: #f1f1f1;
    }
    >input:last-of-type {
      position: absolute;
      top: 10px;
      right: 10px;
      width: 63px;
      height: 30px;
      background-color: #ff841d;
      color: #FFFFFF;
      border-radius: 15px;
    }
  }
  //内容部分
  >.main {
    width: 100%;
    > .filterBox{
      height: 40px;
      background-color: #edf1ef;
      line-height: 40px;
      padding-left: 10px;
      background-image: linear-gradient(to bottom, rgb(255, 253, 245), rgb(247, 245, 237) 100%);
      >a,span {
        font-size: 14px;
        color: #5a5a5a;
      }
      >button{
        float: right;
        height: 30px;
        width: 60px;
        background-color: #dddddd;
        margin-right: 5px;
        margin-top: 5px;
        border-radius: 5px;
        background-image: linear-gradient(to bottom,rgb(227, 229, 212) , rgb(247, 245, 237) 50%, rgb(227, 229, 212) 100%);
      }
    }
    >.productList {
      width: 100%;
      >ul {
        width: 100%;
        background-color: #fff;
        >li{
          border-bottom: 1px solid #e0e0e0 ;
          width: 100%;
          padding: 14px 8px;
          >a{
            display: block;
            width: 100%;
            img{
              width: 100px;
              height: 100px;
            }
            >.right{
              overflow: hidden;
              padding-left: 10px;
              height: 100px;
              >.name{
                font-family: '宋体';
                line-height: 25px;
              }
              >.price {
                color: #ff6c00;
                font-weight: bold;
              }
              >p:nth-of-type(3){
                margin-left: 10px;
                >.productQuote,.productCom{
                  font-size: 12px;
                  color:#a1a1a1 ;
                }

              }


            }
          }
        }
      }
    }
    >.selectPage{
      width: 100%;
      margin: 0 auto;
      box-sizing: border-box;
      >form{
        >div{
          float: left;
          width: 33%;
          box-sizing: border-box;
          height: 40px;
        }
        input,select{
          display: block;
          margin: 0 auto;
          border: 1px solid #dddddd;
          height: 35px;
          padding: 0 15px;
          background-color: #dddddd;
          transform: translateY(10px);
          border-radius: 8px;
          background-image: linear-gradient(to bottom, #e3e5d4, #f7f5ed 50%, #e3e5d4 100%);

        }

      }

    }

  }

  //筛选背景
  .bg-filtrate {
    position: fixed;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    background-color: rgba(0, 0, 0, 0.5);
    display: none;
  }
  //筛选部分
  .filtrate {
    position: fixed;
    left: 0;
    top: 0;
    width: 80%;
    height: 100%;
    background-color: #fff;
    z-index: 99;
    padding: 15px;
    overflow-y: scroll;
    transform: translateX(-100%);
    transition: transform 0.8s ease;
    .close {
      position: absolute;
      width: 10px;
      height: 10px;
      right: 10px;
      top: 10px;
    }
    > p {
      text-align: center;
      font-size: 22px;
      padding-bottom: 30px;
    }
    .pro-brief {
      width: 100%;
      height: 30px;
      line-height: 30px;
      margin-bottom: 15px;
      padding-left: 8px;
    }
    .pro-particular {
      padding: 0 20px 0 0;
      li {
        width: 33.33%;
        float: left;
        text-align: center;
        height: 30px;
        padding: 0 10px;
        margin-bottom: 10px;
        a {
          display: block;
          background-color: #eee;
          border-radius: 4px;
          line-height: 30px;
        }
        &:nth-of-type(n+4) {
          display: none;
        }
      }
    }
  }
  //底部
  footer{
    margin-top: 10px;
    >.function{
      height: 34px;
      margin-top: 10px;
      >a {
        line-height: 34px;
        text-align: center;
        float: left;
        box-sizing: border-box;
        border: 1px solid #c4c4c4;
        border-left: 0 none;
        font-size: 12px;
      }
      >a:nth-of-type(1){
        width: 30%;
      }
      >a:nth-of-type(2){
        width: 30%;
      }
      >a:nth-of-type(3){
        width: 40%;
        border-right: none;

      }
    }
    >.interview {
      margin-top: 20px;
      >p{
        text-align: center;
        font-size: 12px;
        color: #666;
        >span{
          color: red;
        }

      }

    }
  }
}
