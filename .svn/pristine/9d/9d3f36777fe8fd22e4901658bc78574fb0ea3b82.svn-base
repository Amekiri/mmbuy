html,
body {
  width: 100%;
  height: 100%;
  background-color: #fff;
}
* {
  box-sizing: border-box;
}
.layout {
  max-width: 640px;
  min-width: 320px;
  height: 100%;
  padding-top: 44px;
  position: relative;
}
.layout #toTop {
  position: absolute;
  top: 0;
  left: 0;
}
.layout .products-anchor {
  position: fixed;
  bottom: 0;
  right: 0;
  width: 60px;
}
.layout .products-anchor img {
  width: 100%;
}
.layout .discount-header {
  height: 44px;
  position: fixed;
  z-index: 99;
  width: 100%;
  max-width: 640px;
  top: 0;
  left: 0;
}
.layout .discount-header .products-top-title {
  font-family: 'Microsoft yahei';
  text-align: center;
  line-height: 44px;
  width: 100%;
  background-color: #FF6C63;
  color: white;
  font-size: 20px;
  font-weight: 500;
}
.layout .discount-header .go-back {
  position: absolute;
  top: 0;
  left: 0;
  height: 44px;
  width: 44px;
  padding: 5px;
}
.layout .discount-header .go-back .trigger-wrap {
  position: absolute;
  left: 6px;
  top: 12px;
  width: 30px;
  height: 30px;
}
.layout .discount-header .go-back .trigger-wrap .trigger-1 {
  border: 10px solid transparent;
  border-right-color: white;
  position: absolute;
  right: 10px;
  top: 0;
}
.layout .discount-header .go-back .trigger-wrap .trigger-2 {
  border: 10px solid transparent;
  border-right-color: #FF6C63;
  position: absolute;
  top: 0;
  right: 8px;
  z-index: 1;
}
.layout .discount-header .app-download {
  position: absolute;
  right: 0;
  top: 0;
  width: 44px;
  height: 44px;
  background: url('../../images/header_app.png') no-repeat 10px 8px;
  padding: 5px;
  background-size: 60% 60%;
}
.layout .swipe-box {
  position: relative;
}
.layout .swipe-box .timing {
  position: absolute;
  z-index: 2;
  height: 30px;
  width: 110px;
  bottom: 10px;
  left: 50%;
  overflow: hidden;
  transform: translateX(-50%);
}
.layout .swipe-box .timing .timing-img {
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  position: absolute;
  width: 70px;
  height: 70px;
}
.layout .swipe-box .timing .timing-txt {
  position: absolute;
  right: -4px;
  top: 50%;
  transform: translateY(-50%);
  font-size: 12px;
  color: silver;
}
.layout .swipe-box .layout-products {
  position: relative;
  z-index: 3;
}
.layout .swipe-box .layout-products .products-items {
  background-color: #fff;
  overflow: hidden;
  width: 50%;
  float: left;
  border: 1px solid silver;
  border-right: none;
  border-bottom: none;
  padding: 15px;
}
.layout .swipe-box .layout-products .products-items .products-a {
  display: block;
  width: 100%;
  text-align: center;
}
.layout .swipe-box .layout-products .products-items .products-a img {
  width: 140px;
  height: 140px;
}
.layout .swipe-box .layout-products .products-items .products-a .products-txt-1 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  height: 60px;
  font-size: 22px;
  line-height: 30px;
  color: #333333;
  font-family: 'Microsoft yahei';
  text-align: left;
}
.layout .swipe-box .layout-products .products-items .products-a .products-price {
  font-size: 20px;
  line-height: 28px;
  color: #FF6C63;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  text-align: left;
}
.layout .swipe-box .layout-products .products-items .products-a .products-txt-2 {
  font-size: 16px;
  padding-top: 12px;
  color: silver;
  text-align: left;
}
.layout .swipe-box .layout-products .products-items:nth-last-of-type(-n+2) {
  border-bottom: 1px solid silver;
}
.layout footer {
  margin-top: 10px;
}
.layout footer > .function {
  height: 34px;
  margin-top: 10px;
}
.layout footer > .function > a {
  line-height: 34px;
  text-align: center;
  float: left;
  box-sizing: border-box;
  border: 1px solid #c4c4c4;
  border-left: 0 none;
  font-size: 12px;
}
.layout footer > .function > a:nth-of-type(1) {
  width: 30%;
}
.layout footer > .function > a:nth-of-type(2) {
  width: 30%;
}
.layout footer > .function > a:nth-of-type(3) {
  width: 40%;
  border-right: none;
}
.layout footer > .interview {
  margin-top: 20px;
}
.layout footer > .interview > p {
  text-align: center;
  font-size: 12px;
  color: #666;
}
.layout footer > .interview > p > span {
  color: red;
}
